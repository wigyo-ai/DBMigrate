# Database Migration Application Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# Source Database Configuration (Optional - can be set via GUI)
SOURCE_DB_HOST=localhost
SOURCE_DB_PORT=5432
SOURCE_DB_NAME=source_database
SOURCE_DB_USER=postgres
SOURCE_DB_PASSWORD=your_password
SOURCE_DB_SSL_MODE=prefer

# Destination Database Configuration (Optional - can be set via GUI)
DEST_DB_HOST=localhost
DEST_DB_PORT=5432
DEST_DB_NAME=destination_database
DEST_DB_USER=postgres
DEST_DB_PASSWORD=your_password
DEST_DB_SSL_MODE=prefer

# H2O.ai GPTe Configuration (Optional - can be set via GUI)
# Note: Do not include /api at the end of the URL when using the SDK
H2O_GPTE_API_URL=https://h2ogpte.internal.dedicated.h2o.ai
H2O_GPTE_API_KEY=your_gpte_api_key_here
H2O_GPTE_MODEL_ID=gpt-4.1-mini

# Migration Settings
MIGRATION_BATCH_SIZE=1000
MIGRATION_MAX_RETRIES=3
MIGRATION_TIMEOUT=120

# Security
SECRET_KEY=change_this_to_a_random_secret_key
